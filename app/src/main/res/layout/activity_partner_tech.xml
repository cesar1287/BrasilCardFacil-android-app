<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.brasilcardfacil.www.brasilcardfacil.view.PartnerEntertainmentActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/main_banner"
            android:contentDescription="@string/banner_screen_partners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/parceiros_tecnologia_0012_banner_parceiros"
            android:scaleX="1.02"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:layout_marginTop="8sp"/>

        <ImageButton
            android:id="@+id/tech_cellphone"
            android:contentDescription="@string/image_clinic_screen_partner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_banner"
            android:background="@drawable/parceiros_tecnologia_0006_celular"
            android:layout_marginTop="12dp"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"/>

        <ImageButton
            android:id="@+id/tech_photography"
            android:contentDescription="@string/dentistry_image_screen_partner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tech_cellphone"
            android:background="@drawable/parceiros_tecnologia_0007_fotografia"
            android:layout_marginTop="12dp"
            android:layout_alignLeft="@+id/tech_cellphone"
            android:layout_alignStart="@+id/tech_cellphone"/>

        <ImageButton
            android:id="@+id/tech_games"
            android:contentDescription="@string/veterinary_image_screen_partner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tech_photography"
            android:background="@drawable/parceiros_tecnologia_0008_games"
            android:layout_marginTop="12dp"
            android:layout_alignLeft="@+id/tech_cellphone"
            android:layout_alignStart="@+id/tech_cellphone"/>

        <ImageButton
            android:id="@+id/tech_computing"
            android:contentDescription="@string/lab_image_screen_partner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tech_games"
            android:background="@drawable/parceiros_tecnologia_0009_informatica"
            android:layout_marginTop="12dp"
            android:layout_alignLeft="@+id/tech_cellphone"
            android:layout_alignStart="@+id/tech_cellphone"/>

        <ImageButton
            android:id="@+id/tech_internet"
            android:contentDescription="@string/image_clinic_screen_partner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tech_computing"
            android:background="@drawable/parceiros_tecnologia_0010_internet"
            android:layout_marginTop="12dp"
            android:layout_alignLeft="@+id/tech_cellphone"
            android:layout_alignStart="@+id/tech_cellphone"/>

        <ImageButton
            android:id="@+id/tech_technicians"
            android:contentDescription="@string/image_clinic_screen_partner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tech_internet"
            android:background="@drawable/parceiros_tecnologia_0010_tecnicos"
            android:layout_marginTop="12dp"
            android:layout_alignLeft="@+id/tech_cellphone"
            android:layout_alignStart="@+id/tech_cellphone"/>

        <ImageButton
            android:id="@+id/tech_tv_video"
            android:contentDescription="@string/dentistry_image_screen_partner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tech_technicians"
            android:background="@drawable/parceiros_tecnologia_0011_tv_video"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_alignLeft="@+id/tech_cellphone"
            android:layout_alignStart="@+id/tech_cellphone"/>
    </RelativeLayout>
</ScrollView>
