<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.brasilcardfacil.www.brasilcardfacil.view.SettingsActivity">

    <ImageView
        android:id="@+id/settings_banner"
        android:contentDescription="@string/banner_screen_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/settings_0002s_0001_banner_family11"
        android:scaleX="1.02"
        android:layout_marginTop="4sp"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"/>

    <Switch
        android:text="@string/settings_localizacao"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:id="@+id/switch1"
        android:checked="true"
        android:textOn="@string/settings_on"
        android:textOff="@string/settings_off"
        android:switchPadding="50sp"
        android:track="@drawable/switch_track_selector"
        android:switchMinWidth="40sp"
        android:thumb="@drawable/switch_thumb_selector"
        android:layout_below="@+id/switch3"
        android:layout_centerHorizontal="true" />

    <Switch
        android:text="@string/settings_notificao"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:id="@+id/switch2"
        android:checked="true"
        android:textOn="@string/settings_on"
        android:textOff="@string/settings_off"
        android:track="@drawable/switch_track_selector"
        android:switchMinWidth="40sp"
        android:thumb="@drawable/switch_thumb_selector"
        android:layout_below="@+id/switch4"
        android:layout_alignLeft="@+id/switch1"
        android:layout_alignStart="@+id/switch1"
        android:layout_alignRight="@+id/switch1"
        android:layout_alignEnd="@+id/switch1" />

    <Switch
        android:text="@string/settings_banner_ads"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:id="@+id/switch3"
        android:checked="false"
        android:textOn="@string/settings_on"
        android:textOff="@string/settings_off"
        android:track="@drawable/switch_track_selector"
        android:switchMinWidth="40sp"
        android:thumb="@drawable/switch_thumb_selector"
        android:layout_below="@+id/switch2"
        android:layout_alignLeft="@+id/switch1"
        android:layout_alignStart="@+id/switch1"
        android:layout_alignRight="@+id/switch1"
        android:layout_alignEnd="@+id/switch1" />

    <TextView
        android:text="@string/settings_log_out"
        android:textColor="@color/black"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35sp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/switch1"
        android:layout_alignStart="@+id/switch1" />

    <ImageButton
        android:id="@+id/setting_btLogout"
        android:contentDescription="@string/logout_screen_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/settings_0003s_0002_log_out_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="29sp"
        android:layout_alignRight="@+id/switch1"
        android:layout_alignEnd="@+id/switch1" />

    <Switch
        android:text="@string/settings_som"
        android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/switch4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="@string/settings_on"
        android:textOff="@string/settings_off"
        android:checked="true"
        android:track="@drawable/switch_track_selector"
        android:switchMinWidth="40sp"
        android:thumb="@drawable/switch_thumb_selector"
        android:layout_below="@+id/settings_banner"
        android:layout_marginTop="30sp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/switch2"
        android:layout_alignEnd="@+id/switch2"
        android:layout_alignLeft="@+id/switch2"
        android:layout_alignStart="@+id/switch2" />
</RelativeLayout>
