<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.brasilcardfacil.www.brasilcardfacil.view.PartnerAutoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/main_banner"
            android:contentDescription="@string/banner_screen_partners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/parceiros_auto_0006_banner_parceiros"
            android:scaleX="1.02"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:layout_marginTop="8sp"/>

        <ImageButton
            android:id="@+id/auto_accessories"
            android:contentDescription="@string/image_clinic_screen_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_banner"
            android:background="@drawable/parceiros_auto_0009_acessorios"
            android:layout_margin="8sp"
            android:scaleX="0.38"/>

        <ImageButton
            android:id="@+id/auto_driving_school"
            android:contentDescription="@string/image_clinic_screen_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/auto_accessories"
            android:background="@drawable/parceiros_auto_0010_auto_escola"
            android:layout_margin="8sp"
            android:scaleX="0.4"/>

        <ImageButton
            android:id="@+id/auto_auto_parts"
            android:contentDescription="@string/dentistry_image_screen_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/auto_driving_school"
            android:background="@drawable/parceiros_auto_0010_autopecas"
            android:layout_margin="8sp"
            android:scaleX="0.37"/>

        <ImageButton
            android:id="@+id/auto_batterie"
            android:contentDescription="@string/dentistry_image_screen_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/auto_auto_parts"
            android:background="@drawable/parceiros_auto_0010_bateria"
            android:layout_margin="8sp"
            android:scaleX="0.25"/>

        <ImageButton
            android:id="@+id/auto_fuel"
            android:contentDescription="@string/veterinary_image_screen_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/auto_batterie"
            android:background="@drawable/parceiros_auto_0011_combustivel"
            android:layout_margin="8sp"
            android:scaleX="0.42"/>

        <ImageButton
            android:id="@+id/auto_escapement"
            android:contentDescription="@string/lab_image_screen_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/auto_fuel"
            android:background="@drawable/parceiros_auto_0012_escapamento"
            android:layout_margin="8sp"
            android:scaleX="0.45"/>

        <ImageButton
            android:id="@+id/auto_parking"
            android:contentDescription="@string/trade_image_screen_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/auto_escapement"
            android:background="@drawable/parceiros_auto_0013_estacionamento"
            android:layout_margin="8sp"
            android:scaleX="0.54"/>

        <ImageButton
            android:id="@+id/auto_wash"
            android:contentDescription="@string/veterinary_image_screen_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/auto_parking"
            android:background="@drawable/parceiros_auto_0014_lavagem"
            android:layout_margin="8sp"
            android:scaleX="0.3"/>

        <ImageButton
            android:id="@+id/auto_mechanical"
            android:contentDescription="@string/lab_image_screen_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/auto_wash"
            android:background="@drawable/parceiros_auto_0015_mecanica"
            android:layout_margin="8sp"
            android:scaleX="0.32"/>

        <ImageButton
            android:id="@+id/auto_tire"
            android:contentDescription="@string/trade_image_screen_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/auto_mechanical"
            android:background="@drawable/parceiros_auto_0016_pneus"
            android:layout_margin="8sp"
            android:scaleX="0.2"/>
    </RelativeLayout>

</ScrollView>
