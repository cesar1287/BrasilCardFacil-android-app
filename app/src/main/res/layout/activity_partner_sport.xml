<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.brasilcardfacil.www.brasilcardfacil.view.PartnerSportActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/main_banner"
            android:contentDescription="@string/banner_screen_partners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/parceiros_esporte_0010_banner_parceiros"
            android:scaleX="1.02"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:layout_marginTop="8sp"/>

        <ImageButton
            android:id="@+id/sport_gym"
            android:contentDescription="@string/image_clinic_screen_partner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_banner"
            android:layout_centerHorizontal="true"
            android:background="@drawable/parceiros_esporte_0006_academia"
            android:layout_margin="8sp"/>

        <ImageButton
            android:id="@+id/sport_equipment"
            android:contentDescription="@string/image_clinic_screen_partner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sport_gym"
            android:layout_centerHorizontal="true"
            android:background="@drawable/parceiros_esporte_0006_equipamentos"
            android:layout_margin="8sp"/>

        <ImageButton
            android:id="@+id/sport_personal"
            android:contentDescription="@string/dentistry_image_screen_partner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sport_equipment"
            android:layout_centerHorizontal="true"
            android:background="@drawable/parceiros_esporte_0007_personal"
            android:layout_margin="8sp"/>

        <ImageButton
            android:id="@+id/sport_supplement"
            android:contentDescription="@string/veterinary_image_screen_partner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sport_personal"
            android:layout_centerHorizontal="true"
            android:background="@drawable/parceiros_esporte_0008_suplemento"
            android:layout_margin="8sp"/>

        <ImageButton
            android:id="@+id/sport_clothing"
            android:contentDescription="@string/lab_image_screen_partner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sport_supplement"
            android:layout_centerHorizontal="true"
            android:background="@drawable/parceiros_esporte_0009_vestuario"
            android:layout_margin="8sp"/>
    </RelativeLayout>
</ScrollView>
