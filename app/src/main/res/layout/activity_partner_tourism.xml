<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.brasilcardfacil.www.brasilcardfacil.view.PartnerEntertainmentActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/main_banner"
            android:contentDescription="@string/banner_screen_partners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/parceiros_turismo_0011_banner_parceiros"
            android:scaleX="1.02"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:layout_marginTop="8sp"/>

        <ImageButton
            android:id="@+id/tourism_travel_agency"
            android:contentDescription="@string/image_clinic_screen_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_banner"
            android:background="@drawable/parceiros_turismo_0006_agencia_viagem"
            android:layout_margin="8sp"
            android:scaleX="0.7"/>

        <ImageButton
            android:id="@+id/tourism_guide"
            android:contentDescription="@string/dentistry_image_screen_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tourism_travel_agency"
            android:background="@drawable/parceiros_turismo_0007_guia"
            android:layout_margin="8sp"
            android:scaleX="0.15"/>

        <ImageButton
            android:id="@+id/tourism_hostel"
            android:contentDescription="@string/veterinary_image_screen_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tourism_guide"
            android:background="@drawable/parceiros_turismo_0008_hostel"
            android:layout_margin="8sp"
            android:scaleX="0.2"/>

        <ImageButton
            android:id="@+id/tourism_hotel"
            android:contentDescription="@string/lab_image_screen_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tourism_hostel"
            android:background="@drawable/parceiros_turismo_0009_hotel"
            android:layout_margin="8sp"
            android:scaleX="0.17"/>

        <ImageButton
            android:id="@+id/tourism_transport"
            android:contentDescription="@string/image_clinic_screen_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tourism_hotel"
            android:background="@drawable/parceiros_turismo_0010_transporte"
            android:layout_margin="8sp"
            android:scaleX="0.35"/>
    </RelativeLayout>
</ScrollView>
