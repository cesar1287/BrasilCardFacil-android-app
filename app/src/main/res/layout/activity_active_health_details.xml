<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_active_health_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.brasilcardfacil.www.brasilcardfacil.view.ActiveHealthDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/active_health_details_banner"
            android:contentDescription="@string/banner_screen_active_health_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/saude_ativa_0006_banner_art"
            android:scaleX="1.02"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:layout_marginTop="4sp"/>

        <TextView
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:id="@+id/active_health_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/active_health_details_banner"
            android:layout_marginTop="20sp"
            android:layout_centerHorizontal="true"
            android:paddingLeft="30sp"
            android:paddingStart="30sp"
            android:paddingRight="30sp"
            android:paddingEnd="30sp"
            />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/active_health_details_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/active_health_details_title"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:layout_centerHorizontal="true"
            android:paddingLeft="30sp"
            android:paddingStart="30sp"
            android:paddingRight="30sp"
            android:paddingEnd="30sp"/>
    </RelativeLayout>

</ScrollView>
