<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.brasilcardfacil.www.brasilcardfacil.view.AccountActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25">

        <ImageView
            android:id="@+id/acc_pic_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/sym_def_app_icon"
            android:scaleX="1.2"
            android:scaleY="1.2"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1">

        <TextView
            android:id="@+id/acc_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Android Studio"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".70">

        <LinearLayout
            android:id="@+id/acc_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:src="@drawable/user_0003s_0008_email"
                android:layout_gravity="center"
                android:scaleType="fitStart"/>
            <EditText
                android:id="@+id/acc_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".60" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/acc_divisor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/acc_linear">

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/divisor" />

        </LinearLayout>


        <LinearLayout
            android:layout_below="@id/acc_linear"
            android:id="@+id/acc_linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:src="@drawable/user_0003s_0007_telefone"
                android:layout_gravity="center"
                android:scaleType="fitStart"/>
            <EditText
                android:id="@+id/acc_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".60" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/acc_divisor1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/acc_linear1">

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/divisor" />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/acc_linear1"
            android:id="@+id/acc_linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:src="@drawable/user_0003s_0006_nascimento"
                android:layout_gravity="center"
                android:scaleType="fitStart"/>

            <EditText
                android:id="@+id/acc_born"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/acc_divisor2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/acc_linear2">

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/divisor" />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/acc_linear2"
            android:id="@+id/acc_linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:src="@drawable/user_0003s_0001_sexo"
                android:layout_gravity="center"
                android:scaleType="fitStart"/>

            <EditText
                android:id="@+id/acc_sex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".60" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/acc_divisor3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/acc_linear3">

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/divisor" />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/acc_linear3"
            android:id="@+id/acc_linear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:src="@drawable/user_0003s_0003_dados_do_plano"
                android:layout_gravity="center"
                android:scaleType="fitStart" />

            <EditText
                android:id="@+id/acc_plan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".60"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
